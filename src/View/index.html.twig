{% extends 'base.html.twig' %}
{% block title %}Les thés{% endblock %}
{% block h1 %}Liste de thés{% endblock %}
{% block body %}
    {% if products %}
        <div class="row justify-content-center">
            {%  for product in products %}
                <div class="card  col-3 m-2 p-0">
                    <img src="{{ product.image }}" class="card-img p-5">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title m-0 text-center">{{ product.name}}</h5>
                        <p class="card-text align-self-center text-center ">{{ product.price }} €</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
